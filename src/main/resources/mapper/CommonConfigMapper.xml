<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="xianzhan.id.mapper.CommonConfigMapper">

    <resultMap id="CommonConfigMap" type="xianzhan.id.entity.CommonConfig">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="category" property="category" jdbcType="VARCHAR"/>
        <result column="key" property="key" jdbcType="VARCHAR"/>
        <result column="value" property="value" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectBy" resultType="xianzhan.id.entity.CommonConfig">
        SELECT id, category, `key`, `value` FROM common_config
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="category != null">
                AND category = #{category}
            </if>
            <if test="key != null">
                AND `key` = #{key}
            </if>
            <if test="value != null">
                AND `value` = #{value}
            </if>
        </where>
    </select>

    <update id="updateById">
        UPDATE common_config
        <set>
            <if test="category != null">
                category = #{category},
            </if>
            <if test="key != null">
                `key` = #{key},
            </if>
            <if test="value != null">
                `value` = #{value},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <insert id="insert">
        INSERT INTO common_config(category, `key`, value)
            VALUE (#{category}, #{key}, #{value})
    </insert>

</mapper>